{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "moduleResolution": "node",
    "stripInternal": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": ["src", "test"],
  "exclude" : []
}